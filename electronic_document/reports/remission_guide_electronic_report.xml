<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="remission_guide_electronic_report">
        <div class="page">
            <t t-foreach="docs" t-as="o">
                <div class="row">
                    <div class="col-xs-6">
                        <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo"
                            align="left" style="max-height:45pt;max-width:90%;valign:center;"/>
                    </div>
                    <div class="col-xs-6" align="center">
                        <h2>COTIZACIÃ“N</h2>
                    </div>
                </div>
                <br/><br/><br/><br/>
                <div class="row">
                    <div class="col-xs-6">
                        <span t-field="o.company_id.name"/><br/>
                        DIRECCION: <span t-field="o.company_id.street"/><br/>
                        <span t-if="o.company_id.street2">
                            <span t-field="o.company_id.street2"/><br/>
                        </span>
                        PBX: <span t-field="o.company_id.phone"/><br/>
                        <span t-field="o.company_id.city"/> - <span t-field="o.company_id.country_id.name"/>
                    </div>

                </div>
                <br/>
                <div class="row" style="font-size:11px;margin-left:6px;margin-right:6px;">
                    <table style="width:100%; border:1px solid #000000;border-collapse: collapse;">
                        <tr>
                            <td style="width:15%">Cliente:</td>
                            <td class="text-left" style="width:40%">
                                <span t-esc="o.partner_id.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td>RUC/CI:</td>
                            <td class="text-left">
                                <span t-esc="o.partner_id.vat"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Motivo traslado:</td>
                            <td class="text-left">
                                <span t-esc="o.transfer_motive"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Destino(Punto de llegada):</td>
                            <td class="text-left">
                                <span t-esc="o.street"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <br/>
                <div class="row" style="font-size:11px;margin-left:6px;margin-right:6px;">
                    <table style="width:100%; border:1px solid #000000;border-collapse: collapse;">
                        <tr>
                            <td style="width:15%">Transportista:</td>
                            <td class="text-left" style="width:40%">
                                <span t-esc="o.social_name"/>
                            </td>
                        </tr>
                        <tr>
                            <td>RUC/CI:</td>
                            <td class="text-left">
                                <span t-esc="o.ruc_carrier"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Placa:</td>
                            <td class="text-left">
                                <span t-esc="o.license_plate"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Punto de partida:</td>
                            <td class="text-left">
                                <span t-esc="o.start_street"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <br/>
                <div class="row" style="font-size:11px;margin-left:6px;margin-right:6px;">
                    <table style="width:100%; border:1px solid #000000;border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th class="text-center" style="border:1px solid #000000;background-color: black;color:white;">Cantidad</th>
                                <th class="text-center" style="border:1px solid #000000;background-color: black;color:white;width:65%">Descripcion</th>
                            </tr>
                       </thead>
                       <tbody>
                            <tr t-foreach="o.line_id" t-as="s">
                                <td class="text-left" style="border:1px solid #000000;">
                                   <span t-field="s.quantity"/>
                                </td>
                                <td class="text-left" style="border:1px solid #000000;">
                                    <span t-field="s.code"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                </div>
            </t>
        </div><!-- Fin de la pagina -->
    </template>
</odoo>